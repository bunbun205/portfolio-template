---
import BaseLayout from "../layouts/BaseLayout.astro";
import IntroSection from "../components/AboutPage/Introduction";
import SkillMap from "../components/AboutPage/SkillMap";
import Hobbies from "../components/AboutPage/Hobbies";
import ResumeCard from "../components/AboutPage/Resume";
---

<BaseLayout>
  <main class="max-w-4xl mx-auto grid grid-cols-6 gap-4 px-4 py-10">
    <div class="col-span-6">
      <IntroSection client:load />
    </div>

    <div class ="col-span-6">
      <SkillMap client:load />
    </div>

    <div class ="col-span-6">
      <Hobbies client:load />
    </div>

    <div class ="col-span-6">
      <ResumeCard client:load />
    </div>
  </main>
</BaseLayout>

